<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainLogoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">0.5</item>
        <item name="android:textSize">48sp</item>
        <item name="android:text">Hungry\nRadar</item>

    </style>

    <style name="SmallLogoHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name ="android:textColor">@color/white</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">0.5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Hungry\nRadar</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AdminButton">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_black</item>
        <item name="android:backgroundTint">@color/btn</item>
    </style>

    <style name="ShowAddReviewButton">
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="AdminInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CategoryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="CategoryBackgroundImage">

    </style>
    <style name="DropDownLayout" parent="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="DropDownMenuText">
        <item name="android:fontFamily">@font/dela_gothic_one</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailsActivityTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AdminInputLayout" parent="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TabTextAppearance">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>



</resources>
